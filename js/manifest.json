{
  "manifest_version": 2,
  "name": "Enforce Browser Fonts",
  "version": "0.3",
  "description": "Enforce browser fonts easily on webpages instead of letting them use their own fonts",
  "homepage_url": "https://github.com/jayesh-bhoot/enforce-browser-fonts",
  "browser_specific_settings": {
    "gecko": {
      "id": "{18be7a20-8d8f-41f4-813b-4ee948461b8a}"
    }
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/off.svg",
      "96": "icons/off.svg"
    }
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "icons": {
    "48": "icons/on.svg",
    "96": "icons/on.svg"
  },
  "commands": {
    "_execute_browser_action": {
      "description": "Shortcut to toggle the enforcement of browser fonts",
      "suggested_key": {
        "default": "Alt+Comma"
      }
    }
  },
  "permissions": [
    "browserSettings",
    "tabs",
    "storage"
  ]
}
